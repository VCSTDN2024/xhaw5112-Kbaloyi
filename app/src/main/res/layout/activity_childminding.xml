<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#EFE1D5">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_childminding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Childminding"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:textColor="#5A4031" />

    <TextView
        android:id="@+id/tv_fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees: R750"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#5A4031" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content:\n1. Baby Needs\n2. Toddler Needs\n3. Educational Toy"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:textColor="#5A4031" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />


</LinearLayout>
