<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#f5e0d6">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="224dp"
        android:layout_height="185dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Month Courses"
        android:textSize="24sp"
        android:textColor="#5d4037"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/sewing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#7b5843"
        android:text="Sewing"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/landscaping_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#7b5843"
        android:text="Landscaping"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/life_skills_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#7b5843"
        android:text="Life Skills"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/first_aid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#7b5843"
        android:text="First Aid"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#7b5843"
        android:textColor="#ffffff"/>
</LinearLayout>
