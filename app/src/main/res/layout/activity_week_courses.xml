<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#EFE1D5">

    <TextView
        android:id="@+id/tv_6week_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Week Courses"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:textColor="#5A4031" />

    <Button
        android:id="@+id/btn_childminding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Childminding"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />

    <Button
        android:id="@+id/btn_garden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Garden Maintenance"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />

    <Button
        android:id="@+id/btn_cooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cooking"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#A18574" />
</LinearLayout>
