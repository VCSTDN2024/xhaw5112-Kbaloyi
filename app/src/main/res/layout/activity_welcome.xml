<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#EFE1D5">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="#5A4031"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_choose_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your next step"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"
        android:textColor="#5A4031"/>

    <Button
        android:id="@+id/btn_6week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 Week Course"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />

    <Button
        android:id="@+id/btn_6month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 Month Course"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />

    <Button
        android:id="@+id/btn_your_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Details"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#A18574" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#A18574" />
</LinearLayout>
